{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "printWidth": 180,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "endOfLine": "crlf",
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "arrowParens": "avoid",
  "proseWrap": "preserve"
}